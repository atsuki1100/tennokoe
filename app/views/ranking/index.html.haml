            -# .yatta-man8 ⭐️
            -# .yatta-man9 ⭐️
            -# .yatta-man10 ⭐️
          -elsif @num == 2
            %p.question-helpman-2 🌊第#{@num}!!
          -elsif @num == 3
            %p.question-helpman-3 ⚰️第#{@num}!!
          -elsif @num >= 4 && @num <= 10
            %p.question-helpman-10 😈第#{@num}!!
          -else
            %p.question-helpman 🤪第#{@num}!!
          =link_to simple_format("#{question.title}"), question_path(question.id), method: :get, class: 'question__title'
        .question-rank__user
          -if user_signed_in?
            -if question.user.id != current_user.id
              = link_to "#{question.user.nickname}", users_path(question.user.id), class: 'myname'
            -else 
              %p.que-myname #{question.user.nickname}(あなたです)
          -else
            = link_to "#{question.user.nickname}", users_path(question.user.id), class: 'myname'
        -@num += 1
    
