.content
  .view
    %h4 🔥🔥人気の質問！！🔥🔥
  .questions-ran
    .rank
      %button.all all
      %button.day day
      %button.week week
      %button.month month
      %p.come.nal ※コメント数が多い順となってます。
    -@question_ranking.each do |question|
      .question-rank
        .question-rank__text
          -if @num == 1
            %p.question-helpman-1 👑第#{@num}!!
            -# .yatta-man1 😍
            -# .yatta-man2 😇
            -# .yatta-man3 ⭐️
            -# .yatta-man4 ⭐️
            -# .yatta-man5 ⭐️
            -# .yatta-man6 ⭐️
            -# .yatta-man7 ⭐️
            -# .yatta-man8 ⭐️
            -# .yatta-man9 ⭐️
            -# .yatta-man10 ⭐️
          -elsif @num == 2
            %p.question-helpman-2 🌊第#{@num}!!
          -elsif @num == 3
            %p.question-helpman-3 ⚰️第#{@num}!!
          -elsif @num >= 4 && @num <= 10
            %p.question-helpman-10 😈第#{@num}!!
          -else
            %p.question-helpman 🤪第#{@num}!!
          =link_to simple_format("#{question.title}"), question_path(question.id), method: :get, class: 'question__title'
        .question-rank__user
          -if user_signed_in?
            -if question.user.id != current_user.id
              = link_to "#{question.user.nickname}", users_path(question.user.id), class: 'myname'
            -else 
              %p.que-myname #{question.user.nickname}(あなたです)
          -else
            = link_to "#{question.user.nickname}", users_path(question.user.id), class: 'myname'
      -@num += 1
    -# = paginate(@question_ranking)
  .question_btn
    =link_to "助けを求める！!", new_question_path, class: 'rec'
      