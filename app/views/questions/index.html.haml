.content
  .view 
    %h4 質問投稿一覧
  .questions
    -@questions.each do |question|
      .question
        .question__text
          =link_to "#{question.title}", question_path(question.id), method: :get, class: 'question__title' 
        .question__user
          -if user_signed_in?
            -if question.user.id != current_user.id
              = link_to "#{question.user.nickname}", users_path(question.user.id), class: 'myname'
            -else 
              #{question.user.nickname}(あなたです)
          -else
            = link_to "#{question.user.nickname}", users_path(question.user.id), class: 'myname'
  .question_btn
    =link_to "助けを求める！!", new_question_path, class: 'rec'