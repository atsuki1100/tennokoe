.content-show
  .view 
    %h4 質問の詳細
  .usersquestion__body
    .question-title
      #post-font= @question.title
    .question-body
      #post-font= @question.body
    .question-result
      #post-font= @question.result
  .answers
    %h5.tenkoeitiran ~ ~ 天の声一覧 ~ ~
    -@question.answers.each do |answer|
      .answers-show
        .answer-user
          -if answer.user_id != current_user.id
            = link_to "#{answer.user.nickname}", users_path(answer.user.id), class: 'answer-myname'
            %br/
          -else 
            %p.answer-que-myname 質問者
        .heaven-voice
          = answer.body
  .answer-form-gun
    %h5.comment-nal ~ ~ ~ ~ ~ 天の声を授ける ~ ~ \^v^/ﾀｽｹﾙﾖ!! ~ ~ ~ ~ ~
    =form_for [@question, @answer] do |f|
      =f.text_area :body, class: 'answer-form', placeholder: '入力してください', size: "100x5"
      =f.submit "ON", class: 'submit-btn'